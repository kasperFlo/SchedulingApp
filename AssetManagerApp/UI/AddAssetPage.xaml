<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AssetManagerApp.UI.AddAssetPage"
             Title="">
    <!--The Main Grid-->
    <Grid
        RowDefinitions="*,*,*,*,*,*,*,2*"
        ColumnDefinitions="*,2*">

        <!--The header label-->
        <Label Text="Asset Manager"
               Style="{StaticResource HeaderLabelStyle}"
               Grid.ColumnSpan="2" />

        <!--Input fields and corresponding labels-->
        <Label
            Style="{StaticResource SubTextStyle}"
            Text="Name"
            Grid.Row="1"
            Grid.Column="0" />
        <Entry
            Style="{StaticResource MainEntryStyle}"
            x:Name="NameEntry"
            Grid.Row="1"
            Grid.Column="1" />

        <Label
            Style="{StaticResource SubTextStyle}"
            Text="Manufacturer"
            Grid.Row="2"
            Grid.Column="0" />
        <Entry
            Style="{StaticResource MainEntryStyle}"
            x:Name="ManufacturerEntry"
            Grid.Row="2"
            Grid.Column="1" />

        <Label
            Style="{StaticResource SubTextStyle}"
            Text="Details"
            Grid.Row="3"
            Grid.Column="0" />
        <Entry
            Style="{StaticResource MainEntryStyle}"
            x:Name="DetailsEntry"
            Grid.Row="3"
            Grid.Column="1" />

        <Label
            Style="{StaticResource SubTextStyle}"
            Text="Price"
            Grid.Row="4"
            Grid.Column="0" />
        <Entry
            Style="{StaticResource MainEntryStyle}"
            x:Name="PriceEntry"
            Grid.Row="4"
            Grid.Column="1" />

        <Label
            Style="{StaticResource SubTextStyle}"
            Text="Purchase Date"
            Grid.Row="5"
            Grid.Column="0" />
        <DatePicker   
            x:Name="PurchaseDatePicker"
            Grid.Row="5"
            Grid.Column="1"
            Margin="5"
            FontSize="Body"
            VerticalOptions="Center" />

        <Label
            Style="{StaticResource SubTextStyle}"
            Text="Category"
            Grid.Row="6"
            Grid.Column="0" />
        <Picker
            x:Name="CategoryPicker"
            Grid.Row="6"
            Grid.Column="1" 
            Margin="5" 
            VerticalOptions="Center" />

        <!--Bottom row buttons-->
        <HorizontalStackLayout
            Grid.Row="7"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalOptions="Center">

            <Button
                Margin="10"
                Text="Add Asset" 
                BackgroundColor="DarkRed"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="AddAssetButtonClicked"
                />
            <Button
                Margin="10"
                Text="View Assets" 
                BackgroundColor="DarkRed"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="ViewAssetsClicked"/>

        </HorizontalStackLayout>
    </Grid>
</ContentPage>
