<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AssetManagerApp.UI.ViewAssetsPage"
             Title="">
    <Grid
        RowDefinitions="*,2*,5*,*,*">
        <!--The Header Label-->
        <Label
            Style="{StaticResource HeaderLabelStyle}"
            Text="View Assets"/>
        
        <!--The Main Grid-->
        <Grid
            ColumnDefinitions="*,*"
            Grid.Row="1">

            <!--Details of the selected asset-->
            <Image
                x:Name="SelectedAssetImage"
                Aspect="AspectFit"
                Margin="10"
                WidthRequest="100"
                VerticalOptions="Center"
                HorizontalOptions="End"/>
            <VerticalStackLayout
                Grid.Column="1"
                VerticalOptions="Center">
                <Label 
                    x:Name="AssetNameLabel"/>
                <Label 
                    x:Name="ManufacturerLabel"/>
                <Label 
                    x:Name="PurchaseDateLabel"/>
                <Label 
                    x:Name="PriceLabel"/>
            </VerticalStackLayout>
        </Grid>


        <!--List of all Assets-->
        <Frame BorderColor="DarkRed"
               Grid.Row="2"
               Margin="5">
            <ListView
                x:Name="AssetsListView"
                VerticalScrollBarVisibility="Always"
                ItemSelected="AssetListViewSelected"
                >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid
                                ColumnDefinitions="*,5*">
                                <Image
                                    Aspect="AspectFit"
                                    Source="{Binding CategoryIconFile}"
                                    />
                                <VerticalStackLayout
                                    Grid.Column="1"
                                    >
                                    <Label 
                                        Text="{Binding AssetName, StringFormat='Asset Name : {0}'}"
                                        FontAttributes="Bold"
                                        FontSize="Medium"/>

                                    <Label 
                                        Text="{Binding Manufacturer, StringFormat='Manfacturer : {0}'}"
                                        FontAttributes="Italic"
                                        FontSize="Small"/>
                                </VerticalStackLayout>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>

        <!--The summary label-->
        <Label
            Grid.Row="3"
            x:Name="TotalPriceLabel"/>

        <!--Back button-->
        <Button
            Grid.Row="4"
            Text="Back"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            BackgroundColor="DarkRed"
            Clicked="BackButtonClicked"
            />
    </Grid>
</ContentPage>